<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>

<form action="/create_favorite" class="form-horizontal">
  <!-- Label and input for content -->

      <input type="hidden" id="user_id" name="user_id" placeholder="user_id" class="form-control" value="<%= current_user.id %>">


  <!-- Label and input for picture_id -->

      <input type="hidden" id="photo_id" name="photo_id" placeholder="photo" class="form-control" value="<%= @photo.id %>">


  <div class="form-group">
    <div>
      <input type="submit" value="Mark Favorite" class="btn btn-success">
    </div>
  </div>
</form>
</div>

<dl class="dl-horizontal">

  <dt>Image url</dt>
  <dd><%= @photo.image_url %></dd>


  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>


  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>


</dl>
<dl><p><b>Comments</b></p></dl>

<ul class="media-list">
  <% @photo.comments.each do |comment| %>
    <li class="media">
      <div class="media-body">
        <h4 class="media-heading"></h4>
        <%= comment.content %>
      </div>
    </li>
  <% end %>
</ul>

<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Content
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for picture_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="photo" class="form-control" value="<%= @photo.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>
